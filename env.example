# Configurações do Ambiente
NODE_ENV=production
PORT=3000

# Banco de Dados PostgreSQL
DATABASE_URL=postgresql://usuario:senha@host:porta/banco

# Autenticação JWT
JWT_SECRET=sua_chave_secreta_muito_longa_e_aleatoria_aqui_minimo_32_caracteres

# Email - MailerSend
MAILERSEND_API_KEY=sua_api_key_do_mailersend_aqui

# SMS - Twilio
TWILIO_ACCOUNT_SID=seu_account_sid_do_twilio_aqui
TWILIO_AUTH_TOKEN=seu_auth_token_do_twilio_aqui
TWILIO_PHONE_NUMBER=+5511999999999

# Google Maps (opcional)
GOOGLE_MAPS_API_KEY=sua_api_key_do_google_maps_aqui

# Configurações de Sessão
SESSION_SECRET=outra_chave_secreta_para_sessoes

# Configurações de Upload (opcional)
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Configurações de Log
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Configurações de Rate Limiting (opcional)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configurações de CORS (opcional)
CORS_ORIGIN=https://seu-dominio.com
CORS_CREDENTIALS=true

# Configurações de Cache (opcional)
REDIS_URL=redis://localhost:6379

# Configurações de Monitoramento (opcional)
ENABLE_METRICS=true
METRICS_PORT=9090 